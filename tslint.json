{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "src"
  ],
  "rules": {
    "arrow-parens": false,
    "arrow-return-shorthand": false,
    "curly": [true, "ignore-same-line"],
    "eofline": false,
    "forin": false,
    "indent": [true, "spaces", 2],
    "max-line-length": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "no-empty": false,
    "no-namespace": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "no-unnecessary-initializer": false,
    "object-literal-shorthand": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": [true, "always", "strict-bound-class-methods"],
    "space-before-function-paren": [true, "never"],
    "space-within-parens": [true, 0],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  },
  "jsRules": {
    "eofline": false,
    "forin": false,
    "indent": [true, "spaces", 2],
    "max-line-length": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "no-empty": false,
    "no-string-literal": false,
    "no-trailing-whitespace": false,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single", "avoid-escape"],
    "space-before-function-paren": [true, "never"],
    "space-within-parens": [true, 0],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  }
}