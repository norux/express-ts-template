{
  "name": "express-ts-template",
  "version": "0.1.0",
  "description": "Template for express.js with typescript",
  "main": "src/index.ts",
  "scripts": {
    "clean": "npm-run-all clean:dist clean:build clean:logs",
    "clean:dist": "rimraf dist",
    "clean:build": "rimraf out-tsc",
    "clean:logs": "rimraf logs",
    "start": "npm run start:dev",
    "start:prod": "NODE_ENV=production ts-node src/index.ts",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "prebuild": "npm run clean",
    "build": "npm run build:dev",
    "build:prod": "echo 'TODO: webpack production build'",
    "build:dev": "echo 'TODO: webpack development build'",
    "test": "npm-run-all clean:logs clean:build tsc test:coverage test:remap-coverage-html test:tslint",
    "test:ci": "npm-run-all clean:build tsc test:coverage test:remap-coverage-lcov test:tslint",
    "tsc": "tsc",
    "test:mocha": "NODE_ENV=test ./node_modules/.bin/_mocha test/index.js --exit",
    "test:coverage": "NODE_ENV=test istanbul cover _mocha test/index.js -i 'out-tsc/**/*.js' -x 'out-tsc/**/*.spec.js' --dir coverage --report json -- --timeout 5000 --exit",
    "test:remap-coverage-html": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/html -t html",
    "test:remap-coverage-lcov": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/lcov.info -t lcovonly",
    "test:tslint": "tslint --project tsconfig.json --config tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/norux/express-ts-template.git"
  },
  "author": "norux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/norux/express-ts-template/issues"
  },
  "homepage": "https://github.com/norux/express-ts-template#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/expect": "^1.20.2",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/helmet": "0.0.37",
    "@types/lodash": "^4.14.104",
    "@types/mocha": "^2.2.48",
    "@types/mongoose": "^5.0.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "expect": "^22.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "remap-istanbul": "^0.10.1",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "coveralls": "^2.10.0",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "helmet": "^3.11.0",
    "lodash": "^4.17.5",
    "mongoose": "^5.0.7",
    "morgan": "^1.9.0",
    "winston": "^2.4.0"
  }
}
