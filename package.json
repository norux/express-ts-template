{
  "name": "express-ts-template",
  "version": "0.1.0",
  "description": "Template for express.js with typescript",
  "main": "src/index.ts",
  "scripts": {
    "clean": "npm-run-all clean:dist clean:build clean:test",
    "clean:dist": "rimraf dist",
    "clean:build": "rimraf out-tsc",
    "clean:test": "rimraf test",
    "start": "npm run start:dev",
    "start:prod": "NODE_ENV=production ts-node src/index.ts",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "prebuild": "npm run clean",
    "build": "npm run build:dev",
    "build:prod": "echo 'TODO: webpack production build'",
    "build:dev": "echo 'TODO: webpack development build'",
    "pretest": "tsc",
    "test": "npm-run-all test:istanbul test:remap-istanbul",
    "test:istanbul": "istanbul cover _mocha out-tsc/index.spec.js -i 'out-tsc/**/*.js' -x 'out-tsc/**/*.spec.js' --dir coverage --report json -- --timeout 5000",
    "posttest:istanbul": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/html -t html",
    "pretest:ci": "tsc",
    "test:ci": "istanbul cover _mocha out-tsc/index.spec.js -i 'out-tsc/**/*.js' -x 'out-tsc/**/*.spec.js' --dir coverage --report json -- --timeout 5000",
    "posttest:ci": "remap-istanbul -i ./coverage/coverage.json -o ./coverage/lcov.info -t lcovonly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/norux/express-ts-template.git"
  },
  "author": "norux",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/norux/express-ts-template/issues"
  },
  "homepage": "https://github.com/norux/express-ts-template#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-http": "^3.0.4",
    "@types/expect": "^1.20.2",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/mocha": "^2.2.48",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.6",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "expect": "^22.4.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.1",
    "npm-run-all": "^4.1.2",
    "remap-istanbul": "^0.10.1",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.0",
    "typescript": "^2.7.2",
    "webpack": "^3.11.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "coveralls": "^2.10.0",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "helmet": "^3.11.0",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0",
    "winston": "^2.4.0"
  }
}
